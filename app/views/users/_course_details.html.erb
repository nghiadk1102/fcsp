<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <ol class="breadcrumb-arrow">
        <li><%= link_to t(".courses"), user_path(user) %></li>
        <li><%= link_to course.name, user_course_path(user.id, course.id) %></li>
      </ol>
    </div>

    <div class="course-subject">
      <div class="image-course">
        <img src="<%= check_language(course) %>">
      </div>
      <div class="course-header">
        <div>
          <span class="title_course"><%= course.name %></span>
          <span class="status"><%= course.status %></span>
        </div>
        <div class="date">
          <% if course.start_date? && course.end_date? %>
            <span><%= l course.start_date, format: :format_date %> ~ <%= l course.end_date,
              format: :format_date %></span>
          <% end %>
        </div>
      </div>
    </div>

    <h4><%= t ".subjects" %></h4>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
          </div>
          <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".start_date" %></th>
                  <th><%= t ".end_date" %></th>
                </tr>
              </thead>
              <tbody>
                <% @user_course_subjects.each do |course_subject| %>
                  <tr>
                    <td></td>
                    <td><%= course_subject.subject_name %></td>
                    <td><span class="<%= status_color course_subject.status %>"><%= course_subject.status %></span></td>
                    <td>
                      <% if course_subject.start_date? %>
                        <%= l course_subject.start_date, format: :format_date %>
                      <% else %>
                        <%= t ".no_data" %>
                      <% end %>
                    </td>
                    <td>
                      <% if course_subject.start_date? %>
                        <%= l course_subject.end_date, format: :format_date %>
                      <% else %>
                        <%= t ".no_data" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
