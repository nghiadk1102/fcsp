<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <ol class="breadcrumb-arrow">
        <li><a href="#"><%= t ".courses" %></a></li>
      </ol>
    </div>

    <h4><%= t ".all_courses" %></h4>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
          </div>
          <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".start_date" %></th>
                  <th><%= t ".end_date" %></th>
                </tr>
              </thead>

              <tbody>
                <% courses.each do |course| %>
                  <tr>
                    <td></td>
                    <td><%= link_to course.name, user_course_path(user.id, course.id) %></td>
                    <td>
                      <span class="<%= status_color course.status %>"><%= course.status %></span>
                    </td>
                    <td>
                      <% if course.start_date? %>
                        <%= l course.start_date, format: :format_date %>
                      <% else %>
                        <%= t ".no_data" %>
                      <% end %>
                    </td>
                    <td>
                      <% if course.start_date? %>
                        <%= l course.end_date, format: :format_date %>
                      <% else %>
                        <%= t ".no_data" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
